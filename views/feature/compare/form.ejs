<div class="form-card">
  <h2>Compare Inputs</h2>

  <% if (typeof error !== "undefined") { %>
    <p class="error"><%= error %></p>
  <% } %>

  <form method="POST" action="/features/compare">
    <div class="form-group">
      <label for="source">Source</label>
      <input type="text" id="source" name="source" placeholder="Enter source text">
    </div>

    <div class="form-group">
      <label for="target">Target</label>
      <input type="text" id="target" name="target" placeholder="Enter target text">
    </div>

    <div class="form-group">
      <label for="matchMode">Mode</label>
      <select id="matchMode" name="matchMode">
        <option value="sensitive">Sensitive</option>
        <option value="insensitive">Insensitive</option>
      </select>
    </div>

    <div class="form-actions">
      <button type="submit">Compare</button>
    </div>
  </form>
</div>
