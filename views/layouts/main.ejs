<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    My App
  </title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Header -->
  <header>
    <h1>My App</h1>
    <div>
      <% if (user) { %>
        <span style="margin-right: 15px;">Hello, <strong>
            <%= user?.fullName %>
          </strong></span>
        <form action="/logout" method="post" style="display: inline;">
          <button type="submit">Logout</button>
        </form>
        <% } else { %>
          <a href="/login">Login</a>
          <% } %>
    </div>
  </header>

  <!-- Navigation -->
  <nav>
    <% if (user) { %>
      <a href="/features/compare"
        class="nav-link <%= (typeof activePage !== 'undefined' && activePage === 'compare') ? 'active' : '' %>">Compare</a>
      <a href="/features/compare/history"
        class="nav-link <%= (typeof activePage !== 'undefined' && activePage === 'dashboard') ? 'active' : '' %>">Compare
        History</a>
      <a href="/change-password"
        class="nav-link <%= (typeof activePage !== 'undefined' && activePage === 'settings') ? 'active' : '' %>">Settings</a>
      <% } %>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <%- body %>
  </div>
</body>

</html>