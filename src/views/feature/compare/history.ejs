<div class="table-card">
    <h2>Comparison History</h2>
    <% if (history.length===0) { %>
        <p>No history found.</p>
        <% } else { %>
            <table style="width:100%; border-collapse: collapse; text-align:center;">
                <thead>
                    <tr>
                        <th style="border-bottom:1px solid #ddd; padding:8px;">Source</th>
                        <th style="border-bottom:1px solid #ddd; padding:8px;">Target</th>
                        <th style="border-bottom:1px solid #ddd; padding:8px;">Match Mode</th>
                        <th style="border-bottom:1px solid #ddd; padding:8px;">Percentage</th>
                        <th style="border-bottom:1px solid #ddd; padding:8px;">Date</th>
                        <th style="border-bottom:1px solid #ddd; padding:8px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% history.forEach(item=> { %>
                        <tr>
                            <td style="padding:8px; text-align:center;">
                                <%= item.source %>
                            </td>
                            <td style="padding:8px; text-align:center;">
                                <%= item.target %>
                            </td>
                            <td style="padding:8px; text-align:center;">
                                <%= item.match_mode %>
                            </td>
                            <td style="padding:8px; text-align:center;">
                                <%= item.percentage.toFixed(2) %> %
                            </td>
                            <td style="padding:8px; text-align:center;">
                                <%= item.formattedDate %>
                            </td>
                            <td style="padding:8px; text-align:center;">
                                <form action="/features/compare/history/delete/<%= item.id %>" method="post"
                                    onsubmit="return confirm('Are you sure you want to delete this record?');">
                                    <button type="submit"
                                        style="padding:5px 10px; border:none; border-radius:4px; background:red; color:white; cursor:pointer;">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>
</div>